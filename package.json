{
  "name": "avai-backend",
  "version": "1.0.0",
  "description": "AVAI Chat Backend - Node.js + Fastify WebSocket server with Supabase integration",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js --ignore logs/",
    "build": "echo 'No build step required for Node.js deployment'",
    "deploy": "railway up",
    "logs": "railway logs",
    "status": "railway status",
    "health": "curl $RAILWAY_STATIC_URL/health || echo 'Health check failed'",
    "test": "node deployment/verify.js",
    "test:local": "node deployment/test-local.js",
    "prod:optimize": "node --max-old-space-size=512 --optimize-for-size src/server.js",
    "prod:gc": "node --expose-gc --max-old-space-size=512 src/server.js"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@clerk/clerk-sdk-node": "^5.1.6",
    "@fastify/cors": "^11.1.0",
    "@fastify/websocket": "^11.2.0",
    "@supabase/supabase-js": "^2.57.4",
    "dotenv": "^17.2.2",
    "fastify": "^5.6.0",
    "lru-cache": "^11.2.1",
    "node-cache": "^5.1.2",
    "pg-pool": "^3.10.1",
    "prom-client": "^15.1.3",
    "reconnecting-websocket": "^4.4.0",
    "uuid": "^13.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  },
  "keywords": [
    "fastify",
    "websocket",
    "supabase",
    "clerk",
    "chat",
    "backend"
  ],
  "author": "AVAI Team",
  "license": "MIT"
}
